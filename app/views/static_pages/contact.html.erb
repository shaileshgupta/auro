<div class="row">
  <div class="col-lg-10 col-lg-offset-1">
    <div class="content-header">
      <h1>Contact</h1>
    </div>
  </div>
</div>

<br>

<div class="row">
  <div class="col-lg-10 col-lg-offset-1">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" id="alert-box">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= value %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-5 col-lg-offset-1">
    <div class="contact-box">
      <%= form_for(@contact) do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "control-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "control-label" %>
          <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
        </div>

        <div class="form-group">
          <%= f.label :mobile, class: "control-label" %>
          <%= f.text_field :mobile, class: "form-control", placeholder: "Mobile Number" %>
        </div>

        <div class="form-group">
          <%= f.label :body, "Message", class: "control-label" %>
          <%= f.text_area :body, class: "form-control", rows: 4, placeholder: "Message" %>
        </div>

        <div class="form-group">
          <%= f.submit "Send Message", class: "btn btn-block", style: "background-color:#5b9a98" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-lg-5">
    <div class="address-box">
      <address>
        <h4>MAIN OFFICE</h4>
        <strong>AuRo Robotics</strong><br>
        STEP, IIT Kharagpur<br>
        Kharagpur - 721 302<br>
        West Bengal, India<br>
      </address>
      
      <address>
        <h4>EMAIL</h4>
        contact@aurobots.com<br>
      </address>
      
      <address>
        <h4>PHONE</h4>
        Mobile: +91-8588865823<br>
      </address>
    </div>
  </div>
</div>
